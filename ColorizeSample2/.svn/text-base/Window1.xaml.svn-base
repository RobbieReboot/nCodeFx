<Window x:Class="nCodeFxTests.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:nCodeFxLib="clr-namespace:nCodeFxLib;assembly=nCodeFxLib"
    Title="Colorize Example" Width="439" Height="456" >
    <Grid>
        <Border Margin="8" BorderThickness="4" BorderBrush="Blue" CornerRadius="8" Grid.Column="1">
            <StackPanel Margin="8" Orientation="Vertical">
                <StackPanel.Effect>
                    <nCodeFxLib:ColorizeEffect Color="Yellow" IgnoreOpacity="0.995"/>
                </StackPanel.Effect>
                <Button Margin="2" Foreground="#FEFFFFFF" Height="64"  FontSize="24">Text excluded from effect</Button>
                <TextBlock Margin="2" Padding="8,8,0,8" >&lt;TextBlocks&gt; with transparent backgrounds don't get colorized.</TextBlock>
                <ComboBox>
                    <ComboBoxItem>Items in &lt;ComboBox&gt;'s get colorized too!</ComboBoxItem>
                </ComboBox>
                <TextBox Margin="2">Some colorized text in a &lt;TextBox&gt; Note Margins don't get Colorized</TextBox>
                <TextBlock Padding="8,8,0,8" Background="White">Excluded image from the effect</TextBlock>
                <Image Source="lotus.jpg" Opacity="0.995"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
